.recognition-container {
  width: 100%;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 40rpx 80rpx;
  box-sizing: border-box;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  position: relative;
  overflow-x: hidden;
}

/* 顶部装饰 */
.header-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 400rpx;
  overflow: hidden;
}

.decoration-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
}

.circle-1 {
  width: 240rpx;
  height: 240rpx;
  top: -120rpx;
  right: -60rpx;
  animation: float 6s ease-in-out infinite;
}

.circle-2 {
  width: 160rpx;
  height: 160rpx;
  top: 100rpx;
  left: -40rpx;
  animation: float 8s ease-in-out infinite reverse;
}

.circle-3 {
  width: 400rpx;
  height: 400rpx;
  top: -200rpx;
  left: 50%;
  transform: translateX(-50%);
  animation: float 10s ease-in-out infinite;
}

/* 页面标题 */
.page-title {
  margin-top: 120rpx;
  margin-bottom: 80rpx;
  text-align: center;
}

.title-icon {
  font-size: 96rpx;
  margin-bottom: 20rpx;
}

.title-text {
  display: block;
  font-size: 56rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 16rpx;
  text-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.3);
}

.subtitle-text {
  display: block;
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 300;
}

/* 上传区域 */
.upload-section {
  width: 100%;
  max-width: 760rpx;
  margin-bottom: 60rpx;
}

.image-wrapper {
  width: 100%;
  height: 560rpx;
  border-radius: 48rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  overflow: hidden;
  border: 6rpx dashed rgba(255, 255, 255, 0.3);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  box-shadow: 0 40rpx 80rpx rgba(0, 0, 0, 0.15);
}

.image-wrapper.has-image {
  border: 6rpx solid rgba(102, 126, 234, 0.3);
  background: white;
}

.image-wrapper.uploading {
  border-color: #667eea;
}

.preview-image {
  width: 100%;
  height: 100%;
  border-radius: 40rpx;
}

.placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
  padding: 40rpx;
}

.upload-icon {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea, #764ba2);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  animation: pulse 2s infinite;
}

.icon-camera {
  font-size: 64rpx;
  filter: grayscale(1) brightness(2);
}

.placeholder-text {
  color: #667eea;
  font-size: 36rpx;
  font-weight: 600;
  text-align: center;
}

.placeholder-subtext {
  color: #999;
  font-size: 28rpx;
  text-align: center;
}

.upload-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(102, 126, 234, 0.9);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 30rpx;
  border-radius: 40rpx;
}

.upload-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 8rpx solid rgba(255, 255, 255, 0.3);
  border-top: 8rpx solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.upload-text {
  color: white;
  font-size: 32rpx;
  font-weight: 500;
}

/* 结果卡片 */
.result-card {
  width: 100%;
  max-width: 760rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-radius: 48rpx;
  padding: 48rpx;
  margin-bottom: 60rpx;
  box-shadow: 0 40rpx 80rpx rgba(0, 0, 0, 0.15);
  transform: translateY(40rpx);
  opacity: 0;
  transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}

.result-card.show {
  transform: translateY(0);
  opacity: 1;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.result-badge {
  background: linear-gradient(135deg, #667eea, #764ba2);
  padding: 16rpx 32rpx;
  border-radius: 40rpx;
}

.badge-text {
  color: white;
  font-size: 24rpx;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.confidence-chip {
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.confidence-chip.high {
  background: #d4edda;
  color: #155724;
}

.confidence-chip.medium {
  background: #fff3cd;
  color: #856404;
}

.confidence-chip.low {
  background: #f8d7da;
  color: #721c24;
}

.species-info {
  display: flex;
  align-items: center;
  gap: 30rpx;
  margin-bottom: 50rpx;
  padding: 30rpx;
  background: rgba(102, 126, 234, 0.05);
  border-radius: 32rpx;
}

.species-icon {
  font-size: 72rpx;
  width: 120rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: white;
  border-radius: 50%;
  box-shadow: 0 16rpx 40rpx rgba(102, 126, 234, 0.2);
}

.species-details {
  flex: 1;
}

.species-name {
  display: block;
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.species-latin {
  display: block;
  font-size: 28rpx;
  color: #666;
  font-style: italic;
}

.confidence-section {
  margin-bottom: 40rpx;
}

.confidence-label {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.label-text {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

.confidence-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #667eea;
}

.progress-container {
  position: relative;
}

.progress-track {
  width: 100%;
  height: 16rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea, #764ba2);
  border-radius: 8rpx;
  transition: width 1s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
}

.progress-fill::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
  animation: shimmer 2s infinite;
}

.features-section {
  border-top: 2rpx solid #eee;
  padding-top: 40rpx;
}

.features-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.features-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.feature-item {
  background: rgba(102, 126, 234, 0.1);
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
}

.feature-text {
  font-size: 26rpx;
  color: #667eea;
  font-weight: 500;
}

/* 操作按钮 */
.actions-section {
  width: 100%;
  max-width: 760rpx;
  margin-bottom: 60rpx;
}

.primary-btn {
  width: 100%;
  height: 112rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 20rpx;
  font-size: 36rpx;
  font-weight: bold;
  border-radius: 56rpx;
  color: white;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 30rpx 70rpx rgba(102, 126, 234, 0.4);
  border: none;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  margin-bottom: 30rpx;
}

.primary-btn-active {
  transform: translateY(4rpx);
  box-shadow: 0 16rpx 40rpx rgba(102, 126, 234, 0.5);
}

.primary-btn[disabled] {
  background: linear-gradient(135deg, #ccc, #999);
  box-shadow: none;
  transform: none;
}

.primary-btn[data-loading="true"] {
  background: linear-gradient(135deg, #667eea, #764ba2);
  animation: pulse 2s infinite;
}

.btn-loader {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.btn-text {
  font-size: 32rpx;
  font-weight: 600;
}

.secondary-actions {
  display: flex;
  gap: 20rpx;
}

.secondary-btn {
  flex: 1;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10px);
  border: 2rpx solid rgba(102, 126, 234, 0.2);
  border-radius: 48rpx;
  color: #667eea;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.secondary-btn-active {
  background: rgba(102, 126, 234, 0.1);
  transform: scale(0.98);
}

.btn-icon {
  font-size: 32rpx;
}

/* 底部区域 */
.footer-section {
  width: 100%;
  max-width: 760rpx;
}

.logout-btn {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10px);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 50rpx;
  color: rgba(255, 255, 255, 0.9);
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.logout-btn-active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.98);
}

.logout-icon {
  font-size: 36rpx;
}

.logout-text {
  font-size: 28rpx;
}

/* 浮动提示 */
.floating-tips {
  position: fixed;
  bottom: 240rpx;
  left: 40rpx;
  right: 40rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  padding: 30rpx 40rpx;
  border-radius: 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
  animation: slideUp 0.5s ease-out;
}

.tips-text {
  font-size: 28rpx;
  color: #667eea;
  text-align: center;
  line-height: 1.4;
}

/* 动画效果 */
@keyframes float {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-40rpx); }
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

@keyframes shimmer {
  0% { transform: translateX(-100%); }
  100% { transform: translateX(100%); }
}

@keyframes slideUp {
  0% {
    transform: translateY(100%);
    opacity: 0;
  }
  100% {
    transform: translateY(0);
    opacity: 1;
  }
}