/* pages/profile/profile.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #667eea 0%, #764ba2 20%, #f8fafc 20%, #f8fafc 100%);
  position: relative;
  overflow: hidden;
}

/* 顶部背景 */
.top-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 400rpx;
  overflow: hidden;
}

.bg-pattern {
  position: absolute;
  top: -50rpx;
  left: -50rpx;
  right: -50rpx;
  height: 500rpx;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse"><path d="M 10 0 L 0 0 0 10" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="0.5"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
  animation: float 20s ease-in-out infinite;
}

.bg-gradient {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0.05) 100%);
}

/* 登录提示弹窗 */
.login-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(10rpx);
}

.modal-content {
  width: 600rpx;
  background: #fff;
  border-radius: 32rpx;
  padding: 40rpx;
  position: relative;
  z-index: 1001;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.2);
  animation: modalSlideIn 0.3s ease-out;
}

.modal-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.welcome-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.welcome-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 12rpx;
}

.welcome-subtitle {
  display: block;
  font-size: 24rpx;
  color: #6b7280;
  line-height: 1.5;
}

.feature-list {
  margin-bottom: 40rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
}

.feature-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
  width: 40rpx;
  text-align: center;
}

.feature-text {
  font-size: 26rpx;
  color: #374151;
}

.modal-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  transition: all 0.3s ease;
}

.secondary-btn {
  background: #f3f4f6;
  color: #6b7280;
}

.secondary-btn:active {
  background: #e5e7eb;
  transform: scale(0.98);
}

.primary-btn {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
}

.primary-btn:active {
  transform: translateY(2rpx) scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.primary-btn.loading {
  opacity: 0.8;
}

/* 用户信息卡片 */
.user-card {
  margin: 60rpx 30rpx 30rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 32rpx;
  padding: 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  position: relative;
  z-index: 10;
}

.user-info-logged {
  display: flex;
  align-items: center;
  position: relative;
}

.avatar-section {
  position: relative;
  margin-right: 30rpx;
}

.avatar-button {
  position: relative;
  padding: 0;
  background: transparent;
  border: none;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 6rpx solid #fff;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.15);
  position: relative;
  z-index: 2;
}

.avatar-edit-hint {
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  opacity: 0;
  transition: opacity 0.3s ease;
  z-index: 3;
}

.avatar-button:active .avatar-edit-hint {
  opacity: 1;
}

.edit-text {
  font-size: 18rpx;
}

.status-dot {
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  width: 24rpx;
  height: 24rpx;
  background: #4ade80;
  border-radius: 50%;
  border: 4rpx solid #fff;
  z-index: 3;
}

.user-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.user-main {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.nickname-wrapper {
  margin-right: 16rpx;
}

.nickname-input {
  font-size: 36rpx;
  font-weight: bold;
  color: #1f2937;
  background: transparent;
  border: none;
  padding: 0;
  min-width: 200rpx;
}

.username {
  font-size: 36rpx;
  font-weight: bold;
  color: #1f2937;
}

.user-badge {
  background: linear-gradient(135deg, #fbbf24, #f59e0b);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(251, 191, 36, 0.3);
}

.badge-text {
  font-size: 20rpx;
  color: #fff;
  font-weight: bold;
}

.user-desc {
  font-size: 24rpx;
  color: #6b7280;
  line-height: 1.5;
}

.settings-btn {
  width: 60rpx;
  height: 60rpx;
  background: #f3f4f6;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.settings-btn:active {
  background: #e5e7eb;
  transform: scale(0.95);
}

.settings-icon {
  width: 6rpx;
  height: 6rpx;
  background: #6b7280;
  border-radius: 50%;
  position: relative;
}

.settings-icon::before,
.settings-icon::after {
  content: '';
  position: absolute;
  width: 6rpx;
  height: 6rpx;
  background: #6b7280;
  border-radius: 50%;
}

.settings-icon::before {
  top: -16rpx;
}

.settings-icon::after {
  top: 16rpx;
}

/* 游客状态 */
.user-info-guest {
  display: flex;
  align-items: center;
}

.guest-avatar {
  margin-right: 30rpx;
}

.avatar-placeholder {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #e5e7eb, #d1d5db);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 6rpx solid #fff;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.avatar-text {
  font-size: 36rpx;
}

.guest-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.guest-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 12rpx;
}

.guest-desc {
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 30rpx;
  line-height: 1.5;
}

.login-button {
  width: 200rpx;
  height: 64rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: #fff;
  border-radius: 32rpx;
  font-size: 26rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s ease;
  border: none;
}

.login-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.login-button.loading {
  opacity: 0.8;
}

.loading-spinner {
  width: 28rpx;
  height: 28rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
  border-top: 3rpx solid #fff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-right: 12rpx;
}

/* 数据统计卡片 */
.stats-card {
  margin: 0 30rpx 30rpx;
  background: #fff;
  border-radius: 32rpx;
  padding: 40rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.08);
}

.stats-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.stats-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
}

.stats-icon {
  font-size: 36rpx;
}

.stats-content {
  display: flex;
  justify-content: space-between;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-circle {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  position: relative;
  overflow: hidden;
}

.stat-circle::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: 50%;
  background: inherit;
  opacity: 0.1;
}

.stat-primary {
  background: linear-gradient(135deg, #667eea, #764ba2);
}

.stat-success {
  background: linear-gradient(135deg, #10b981, #059669);
}

.stat-warning {
  background: linear-gradient(135deg, #f59e0b, #d97706);
}

.stat-info {
  background: linear-gradient(135deg, #06b6d4, #0891b2);
}

.stat-number {
  font-size: 28rpx;
  font-weight: bold;
  color: #fff;
  position: relative;
  z-index: 2;
}

.stat-label {
  font-size: 22rpx;
  color: #6b7280;
  text-align: center;
}

/* 提示卡片 */
.hint-card {
  margin: 0 30rpx 30rpx;
  background: linear-gradient(135deg, #fef3c7, #fde68a);
  border-radius: 24rpx;
  padding: 30rpx;
  border: 2rpx solid #f59e0b20;
}

.hint-content {
  display: flex;
  align-items: flex-start;
}

.hint-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
  margin-top: 4rpx;
}

.hint-text {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.hint-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #92400e;
  margin-bottom: 8rpx;
}

.hint-desc {
  font-size: 24rpx;
  color: #a16207;
  line-height: 1.5;
}

/* 功能菜单 */
.menu-section {
  margin: 0 30rpx 30rpx;
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #1f2937;
  margin-right: 16rpx;
}

.section-decoration {
  flex: 1;
  height: 2rpx;
  background: linear-gradient(90deg, #667eea, transparent);
}

.menu-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.menu-card {
  flex: 1;
  min-width: 200rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.menu-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #667eea, #764ba2);
  transform: scaleX(0);
  transition: transform 0.3s ease;
}

.menu-card:active::before {
  transform: scaleX(1);
}

.menu-card-disabled {
  opacity: 0.6;
}

.menu-card-disabled:active {
  transform: none;
}

.menu-card:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.menu-icon-wrapper {
  position: relative;
  margin-bottom: 20rpx;
}

.menu-icon {
  width: 48rpx;
  height: 48rpx;
}

.menu-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  font-size: 18rpx;
  padding: 4rpx 8rpx;
  border-radius: 12rpx;
  color: #fff;
  font-weight: bold;
  min-width: 20rpx;
  text-align: center;
  line-height: 1;
}

.badge-new {
  background: linear-gradient(135deg, #ef4444, #dc2626);
  animation: bounce 2s infinite;
}

.badge-number {
  background: linear-gradient(135deg, #667eea, #764ba2);
}

.lock-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.lock-icon {
  font-size: 20rpx;
}

.menu-title {
  font-size: 24rpx;
  color: #374151;
  font-weight: 500;
  margin-bottom: 12rpx;
  text-align: center;
}

.menu-arrow {
  font-size: 20rpx;
  color: #9ca3af;
  font-weight: bold;
}

/* 设置菜单 */
.settings-section {
  margin: 0 30rpx 30rpx;
}

.settings-list {
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.06);
}

.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 30rpx;
  border-bottom: 1rpx solid #f3f4f6;
  transition: background-color 0.3s ease;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-item:active {
  background-color: #f9fafb;
}

.setting-left {
  display: flex;
  align-items: center;
}

.setting-icon-bg {
  width: 64rpx;
  height: 64rpx;
  background: linear-gradient(135deg, #f3f4f6, #e5e7eb);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.setting-icon {
  width: 32rpx;
  height: 32rpx;
}

.setting-text {
  font-size: 28rpx;
  color: #374151;
  font-weight: 500;
}

.setting-arrow {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.arrow-text {
  font-size: 32rpx;
  color: #9ca3af;
  font-weight: 300;
}

/* 底部信息 */
.footer {
  margin: 60rpx 30rpx 30rpx;
  padding: 40rpx;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  text-align: center;
}

.app-info {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.app-logo {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.app-details {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.app-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #1f2937;
  line-height: 1.2;
}

.app-version {
  font-size: 20rpx;
  color: #9ca3af;
  background: #f3f4f6;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  margin-top: 4rpx;
}

.copyright {
  font-size: 22rpx;
  color: #9ca3af;
  line-height: 1.5;
}

/* 装饰元素 */
.decoration {
  position: absolute;
  border-radius: 50%;
  background: linear-gradient(45deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.05));
  z-index: 1;
}

.decoration-1 {
  width: 200rpx;
  height: 200rpx;
  top: 100rpx;
  right: -100rpx;
  animation: float 8s ease-in-out infinite;
}

.decoration-2 {
  width: 150rpx;
  height: 150rpx;
  top: 300rpx;
  left: -75rpx;
  animation: float 12s ease-in-out infinite reverse;
}

.decoration-3 {
  width: 100rpx;
  height: 100rpx;
  bottom: 200rpx;
  right: -50rpx;
  animation: float 10s ease-in-out infinite;
}

/* 动画 */
@keyframes modalSlideIn {
  from {
    opacity: 0;
    transform: translateY(-50rpx) scale(0.9);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

@keyframes float {
  0%, 100% {
    transform: translateY(0px) rotate(0deg);
  }
  50% {
    transform: translateY(-20rpx) rotate(5deg);
  }
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes bounce {
  0%, 20%, 53%, 80%, 100% {
    transform: translate3d(0, 0, 0);
  }
  40%, 43% {
    transform: translate3d(0, -8rpx, 0);
  }
  70% {
    transform: translate3d(0, -4rpx, 0);
  }
  90% {
    transform: translate3d(0, -2rpx, 0);
  }
}

/* 响应式设计 */
@media screen and (max-width: 375px) {
  .user-card {
    margin: 100rpx 20rpx 30rpx; 
    padding: 30rpx;
  }
  
  .modal-content {
    width: 520rpx;
    padding: 30rpx;
  }
  
  .menu-grid {
    gap: 15rpx;
  }
  
  .menu-card {
    min-width: 160rpx;
    padding: 24rpx 16rpx;
  }
  
  .stats-content {
    flex-wrap: wrap;
    gap: 20rpx;
  }
  
  .stat-item {
    width: 45%;
  }
}