/* 全局样式 */
.home-container {
  width: 100%;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  position: relative;
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.loading-spinner {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 40rpx;
}

.spinner-ring {
  width: 100rpx;
  height: 100rpx;
  border: 8rpx solid rgba(102, 126, 234, 0.2);
  border-top: 8rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 32rpx;
  color: #667eea;
  font-weight: 500;
}

/* 头部区域 */
.header {
  position: relative;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 100rpx 40rpx 60rpx;
  color: white;
  overflow: hidden;
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="white" opacity="0.1"/><circle cx="75" cy="75" r="1" fill="white" opacity="0.1"/><circle cx="50" cy="10" r="0.5" fill="white" opacity="0.15"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
}

.header-content {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 2;
}

.logo-section {
  display: flex;
  align-items: center;
  gap: 30rpx;
}

.logo-container {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.logo-icon {
  font-size: 72rpx;
  position: relative;
  z-index: 2;
}

.logo-glow {
  position: absolute;
  width: 120rpx;
  height: 120rpx;
  background: radial-gradient(circle, rgba(255,255,255,0.3) 0%, transparent 70%);
  border-radius: 50%;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); opacity: 0.3; }
  50% { transform: scale(1.1); opacity: 0.6; }
}

.app-info {
  display: flex;
  flex-direction: column;
}

.app-name {
  font-size: 44rpx;
  font-weight: 700;
  margin-bottom: 4rpx;
}

.app-subtitle {
  font-size: 24rpx;
  opacity: 0.8;
  font-weight: 400;
}

.scan-btn {
  position: relative;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10px);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 50rpx;
  padding: 0;
  overflow: hidden;
}

.scan-btn-inner {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 24rpx 40rpx;
  position: relative;
  z-index: 2;
}

.scan-btn-glow {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(45deg, transparent, rgba(255,255,255,0.1), transparent);
  transform: translateX(-100%);
  animation: shimmer 3s infinite;
}

@keyframes shimmer {
  0% { transform: translateX(-100%); }
  100% { transform: translateX(100%); }
}

.scan-icon {
  font-size: 36rpx;
}

.scan-text {
  font-size: 30rpx;
  font-weight: 600;
}

/* 搜索区域 */
.search-section {
  padding: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  margin-top: -20rpx;
}

.search-container {
  position: relative;
}

.search-box {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-radius: 60rpx;
  padding: 30rpx 40rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.search-icon {
  font-size: 36rpx;
  color: #667eea;
}

.search-input {
  flex: 1;
  font-size: 32rpx;
  border: none;
  outline: none;
  background: transparent;
  color: #333;
}

.search-input::placeholder {
  color: #999;
}

.search-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.clear-icon {
  font-size: 24rpx;
  color: #666;
}

/* 分类导航 */
.category-nav {
  padding: 40rpx 40rpx 60rpx;
  background: linear-gradient(to bottom, #764ba2, #f5f7fa);
}

.category-scroll {
  white-space: nowrap;
}

.category-list {
  display: flex;
  gap: 30rpx;
  padding: 10rpx 10rpx;
}

.category-item {
  position: relative;
  flex-shrink: 0;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10px);
  border-radius: 50rpx;
  padding: 30rpx 36rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  min-width: 160rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  overflow: hidden;
}

.category-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #667eea, #764ba2);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.category-item.active::before {
  opacity: 1;
}

.category-item.active {
  color: white;
  transform: translateY(-6rpx) scale(1.05);
  box-shadow: 0 20rpx 50rpx rgba(102, 126, 234, 0.3);
}

.category-icon-container {
  position: relative;
  z-index: 2;
}

.category-icon {
  font-size: 48rpx;
}

.category-name {
  font-size: 26rpx;
  font-weight: 600;
  position: relative;
  z-index: 2;
}

.category-active-dot {
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 12rpx;
  height: 12rpx;
  background: white;
  border-radius: 50%;
  z-index: 3;
}

/* 主内容区域 */
.orchids-section {
  background: #f5f7fa;
  padding: 60rpx 40rpx 80rpx;
  min-height: 60vh;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 50rpx;
  position: relative;
}

.section-title-container {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.section-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #333;
}

.section-count-badge {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  padding: 8rpx 24rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.section-decoration {
  width: 80rpx;
  height: 8rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 4rpx;
}

/* 兰花卡片 */
.orchids-grid {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

.orchid-card {
  position: relative;
  background: white;
  border-radius: 50rpx;
  overflow: hidden;
  box-shadow: 0 16rpx 60rpx rgba(0, 0, 0, 0.08);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.orchid-card-active {
  transform: scale(0.98);
}

.card-image {
  position: relative;
  height: 400rpx;
  overflow: hidden;
}

.orchid-image {
  width: 100%;
  height: 100%;
  transition: transform 0.4s ease;
}

.orchid-card:hover .orchid-image {
  transform: scale(1.05);
}

.image-gradient {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 50%;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.4));
}

.image-overlay {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
}

.popularity-badge {
  background: rgba(255, 107, 107, 0.9);
  backdrop-filter: blur(10px);
  color: white;
  padding: 12rpx 24rpx;
  border-radius: 40rpx;
  font-size: 24rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 30rpx rgba(255, 107, 107, 0.3);
}

.card-content {
  padding: 50rpx;
  position: relative;
}

.orchid-info {
  margin-bottom: 30rpx;
}

.orchid-name {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 10rpx;
}

.orchid-latin {
  display: block;
  font-size: 28rpx;
  color: #667eea;
  font-style: italic;
  font-weight: 400;
}

.orchid-features {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 40rpx;
}

.feature-tag {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
  color: #667eea;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  font-weight: 500;
  border: 2rpx solid rgba(102, 126, 234, 0.2);
}

.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.difficulty-section {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.difficulty-label {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

.difficulty-indicator {
  display: flex;
  gap: 6rpx;
}

.difficulty-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #e0e0e0;
  transition: background 0.3s ease;
}

.difficulty-dot.active {
  background: #667eea;
  box-shadow: 0 0 12rpx rgba(102, 126, 234, 0.5);
}

.detail-arrow {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 50%;
  transition: transform 0.3s ease;
}

.orchid-card:hover .detail-arrow {
  transform: translateX(10rpx);
}

.arrow-text {
  font-size: 32rpx;
  color: #667eea;
  font-weight: 700;
}

.card-shine {
  position: absolute;
  top: 0;
  left: -100%;
  width: 60%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transform: skewX(-20deg);
  transition: left 0.5s ease;
}

.orchid-card:hover .card-shine {
  left: 100%;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  min-height: 600rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 50rpx;
  box-shadow: 0 16rpx 60rpx rgba(0, 0, 0, 0.08);
}

.empty-animation {
  position: relative;
  margin-bottom: 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-20rpx); }
}

.empty-particles {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.particle {
  position: absolute;
  width: 12rpx;
  height: 12rpx;
  background: radial-gradient(circle, rgba(102, 126, 234, 0.5) 20%, transparent 70%);
  border-radius: 50%;
  animation: particle 3s ease-in-out infinite;
}

.particle:nth-child(1) { animation-delay: 0s; transform: translate(40rpx, 20rpx); }
.particle:nth-child(2) { animation-delay: 0.5s; transform: translate(-30rpx, 30rpx); }
.particle:nth-child(3) { animation-delay: 1s; transform: translate(50rpx, -20rpx); }
.particle:nth-child(4) { animation-delay: 1.5s; transform: translate(-40rpx, -30rpx); }
.particle:nth-child(5) { animation-delay: 2s; transform: translate(20rpx, -40rpx); }
.particle:nth-child(6) { animation-delay: 2.5s; transform: translate(-20rpx, 40rpx); }

@keyframes particle {
  0%, 100% { opacity: 0.3; transform: translateY(0) scale(1); }
  50% { opacity: 0.8; transform: translateY(-20rpx) scale(1.2); }
}

.empty-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.empty-subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.refresh-btn {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  padding: 24rpx 48rpx;
  border-radius: 50rpx;
  border: none;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 16rpx;
  box-shadow: 0 12rpx 40rpx rgba(102, 126, 234, 0.3);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.refresh-btn:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 16rpx 50rpx rgba(102, 126, 234, 0.4);
}

/* 加载更多按钮 */
.load-more {
  display: flex;
  justify-content: center;
  padding: 40rpx 0;
}

.load-more-btn {
  background: transparent;
  border: 2rpx solid rgba(102, 126, 234, 0.3);
  border-radius: 50rpx;
  padding: 24rpx 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.load-more-btn:disabled {
  opacity: 0.6;
}

.load-more-content {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.load-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid rgba(102, 126, 234, 0.2);
  border-top: 4rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.load-text {
  font-size: 28rpx;
  color: #667eea;
  font-weight: 600;
}

/* 详情弹窗 */
.detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-backdrop {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(5px);
}

.modal-content {
  background: white;
  border-radius: 40rpx;
  width: 90%;
  max-width: 1200rpx;
  max-height: 80vh;
  overflow-y: auto;
  position: relative;
  box-shadow: 0 20rpx 80rpx rgba(0, 0, 0, 0.2);
  animation: slideUp 0.4s ease-out;
}

@keyframes slideUp {
  from { transform: translateY(100rpx); opacity: 0; }
  to { transform: translateY(0); opacity: 1; }
}

.modal-header {
  position: sticky;
  top: 0;
  background: white;
  padding: 30rpx;
  z-index: 2;
}

.close-btn {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  background: rgba(0, 0, 0, 0.05);
  border: none;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background 0.3s ease;
}

.close-btn-hover {
  background: rgba(0, 0, 0, 0.1);
}

.close-icon {
  font-size: 32rpx;
  color: #666;
}

.detail-content {
  padding: 40rpx;
}

.detail-image {
  position: relative;
  height: 500rpx;
  overflow: hidden;
  border-radius: 30rpx;
  margin-bottom: 40rpx;
}

.detail-orchid-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.detail-image-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.3));
}

.detail-title {
  margin-bottom: 30rpx;
}

.detail-name {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 10rpx;
}

.detail-latin {
  font-size: 32rpx;
  color: #667eea;
  font-style: italic;
}

.detail-description {
  margin-bottom: 40rpx;
}

.description-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.detail-features {
  margin-bottom: 40rpx;
}

.features-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.features-grid {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.feature-bullet {
  width: 12rpx;
  height: 12rpx;
  background: #667eea;
  border-radius: 50%;
}

.feature-desc {
  font-size: 28rpx;
  color: #333;
}

.care-info {
  background: rgba(102, 126, 234, 0.05);
  border-radius: 30rpx;
  padding: 30rpx;
}

.care-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
}

.care-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 30rpx;
}

.care-item {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.care-icon {
  font-size: 40rpx;
}

.care-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.care-value {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}