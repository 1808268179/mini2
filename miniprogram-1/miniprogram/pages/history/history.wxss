/* miniprogram/pages/history/history.wxss */
.history-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  border-top: 6rpx solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-title {
  font-size: 36rpx;
  color: white;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.empty-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
  line-height: 1.5;
}

.history-list {
  padding-bottom: 40rpx;
}

.history-item {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  border-radius: 32rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  /* margin-bottom: 24rpx; */
}

.item-main {
  flex: 1;
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
}

.item-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  background: #f5f5f5;
}

.item-content {
  flex: 1;
}

.item-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  line-height: 1.3;
}

.item-subtitle {
  margin-left: 10rpx;
  font-size: 28rpx;
  color: #666;
  font-style: italic;
  margin-bottom: 16rpx;
}

.confidence-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.confidence-badge {
  padding: 6rpx 0rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.confidence-badge.high {
  background: #d4edda;
  color: #155724;
}

.confidence-badge.medium {
  background: #fff3cd;
  color: #856404;
}

.confidence-badge.low {
  background: #f8d7da;
  color: #721c24;
}

.confidence-text {
  font-size: 28rpx;
  color: #666;
}

.item-time {
  font-size: 24rpx;
  color: #999;
}

.item-actions {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.action-btn {
  width: 64rpx !important;
  min-width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  border: none !important;
  padding: 0 !important;
  margin: 0;
  line-height: 1;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.preview-btn {
  background: rgba(102, 126, 234, 0.1);
  color: #667eea;
}

.preview-btn:active {
  background: rgba(102, 126, 234, 0.2);
  transform: scale(0.95);
}

.delete-btn {
  background: rgba(220, 53, 69, 0.1);
  color: #dc3545;
}

.delete-btn:active {
  background: rgba(220, 53, 69, 0.2);
  transform: scale(0.95);
}

.load-more-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 120rpx;
}

.load-more-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.load-more-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-right: 16rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}