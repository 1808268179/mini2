                <input class="search-input" placeholder="ÊêúÁ¥¢ÂÖ∞Ëä±ÂìÅÁßç„ÄÅÁâπÂæÅ..." bindinput="onSearch" value="{{searchKeyword}}" />
                <view class="search-btn" wx:if="{{searchKeyword}}" bindtap="clearSearch">
